<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetLeft="0dp" android:insetTop="3dp" android:insetRight="0dp" android:insetBottom="3dp">
            <shape android:shape="rectangle">
                <corners android:radius="16dp" />
                <solid android:color="#b8ffffff" />
                <stroke android:width="0dp" android:color="#aaffffff" />
                <padding android:bottom="0dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetLeft="0dp" android:insetTop="3dp" android:insetRight="0dp" android:insetBottom="3dp">
            <shape android:shape="rectangle">
                <corners android:radius="16dp" />
                <solid android:color="#b8ffffff" />
                <stroke android:width="0dp" android:color="#aaffffff" />
                <padding android:bottom="0dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            </shape>
        </inset>
    </item>

</selector>