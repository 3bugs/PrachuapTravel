<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="2dp" android:insetLeft="2dp" android:insetRight="2dp" android:insetTop="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="2dp"/>
                <solid android:color="#ccffffff"/>
                <stroke android:width="0dp" android:color="@android:color/white"/>
                <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="2dp" android:insetLeft="2dp" android:insetRight="2dp" android:insetTop="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="2dp"/>
                <solid android:color="#ffffff"/>
                <stroke android:width="0dp" android:color="@android:color/darker_gray"/>
                <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp"/>
            </shape>
        </inset>
    </item>

</selector>