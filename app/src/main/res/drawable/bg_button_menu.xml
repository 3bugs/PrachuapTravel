<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetLeft="0dp" android:insetTop="6dp" android:insetRight="0dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="0dp" />
                <solid android:color="#cc217F30" />
                <stroke android:width="0dp" android:color="@color/colorPrimary" />
                <padding android:bottom="10dp" android:left="6dp" android:right="6dp" android:top="10dp" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetLeft="0dp" android:insetTop="6dp" android:insetRight="0dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="#cc044900" />
                <stroke android:width="0dp" android:color="#044900" />
                <padding android:bottom="10dp" android:left="6dp" android:right="6dp" android:top="10dp" />
            </shape>
        </inset>
    </item>

</selector>